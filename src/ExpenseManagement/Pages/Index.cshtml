@page
@model IndexModel
@{
    ViewData["Title"] = "Expenses";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="error-banner">
        <h6>⚠️ Database Connection Error</h6>
        <p class="mb-2">@Model.ErrorMessage</p>
        <details>
            <summary>Technical Details</summary>
            <pre>@Model.ErrorDetails</pre>
        </details>
    </div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Expenses</h5>
        <a asp-page="/AddExpense" class="btn btn-light btn-sm">+ Add Expense</a>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-4">
                <label for="filter" class="form-label">Filter:</label>
                <input type="text" class="form-control" id="filter" name="filter" value="@Model.Filter" placeholder="Search by description...">
            </div>
            <div class="col-md-3">
                <label for="status" class="form-label">Status:</label>
                <select class="form-select" id="status" name="status">
                    <option value="">All Statuses</option>
                    @foreach (var status in Model.Statuses)
                    {
                        <option value="@status.StatusName" selected="@(status.StatusName == Model.StatusFilter)">@status.StatusName</option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Apply Filter</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th class="text-end">Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Expenses.Any())
                    {
                        @foreach (var expense in Model.Expenses)
                        {
                            <tr>
                                <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                <td>@expense.CategoryName</td>
                                <td>@expense.Description</td>
                                <td class="text-end amount-cell">@expense.FormattedAmount</td>
                                <td>
                                    <span class="status-badge status-@expense.StatusName?.ToLower()">
                                        @expense.StatusName
                                    </span>
                                </td>
                                <td>
                                    @if (expense.StatusName == "Draft")
                                    {
                                        <form method="post" asp-page-handler="Submit" style="display:inline">
                                            <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Submit</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No expenses found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
